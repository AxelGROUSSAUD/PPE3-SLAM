<Window x:Class="PPE3_SLAM_HUGO.FenetreTransactions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPE3_SLAM_HUGO"
        mc:Ignorable="d"
        Title="Transactions" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lst_clients" HorizontalAlignment="Left" Height="288" Margin="20,48,0,0" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="btn_VoirLesTransactions" Content="Voir les transactions" HorizontalAlignment="Left" Margin="22,341,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Label Content="Nom &#xA;" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,14,0,371" Background="White" FontSize="14" Height="34" Width="132"/>
        <Label x:Name="lbl_clients" Content="liste clients :" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,14,0,371" Background="White" FontSize="14" Height="34" Width="132" FontStyle="Italic"/>
        <Grid x:Name="displayClients" Margin="295,48,22,83" RenderTransformOrigin="0.523,0.493">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="119*"/>
                <ColumnDefinition Width="300*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="83*"/>
            </Grid.RowDefinitions>
            <Label Content="Client :&#xA;" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,6,0,248" Background="White" FontSize="14" Height="34" Width="132" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <TextBox x:Name="txtbox_Client" Text="{Binding Name}" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="9.722,11,10.278,10" Height="18"/>
            <Label Content="Liste des transactions :" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,9,0,212" Background="White" FontSize="14" Height="28" Width="148" Grid.ColumnSpan="2"/>
            <Image x:Name="imageFromage" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="47,20,78.278,19" Height="0" Width="0" Grid.Column="1"/>
            <ListBox x:Name="lst_transactions" Grid.Column="2" HorizontalAlignment="Left" Height="229" Margin="9.722,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="297"/>
        </Grid>

    </Grid>
</Window>
