        <RadioButton x:Name="rdb_Annecy" Content="Annecy" HorizontalAlignment="Left" Margin="101,122,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rdb_thonon" Content="Thonon-les-bains" HorizontalAlignment="Left" Margin="238,122,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rdb_bonneville" Content="Bonneville" HorizontalAlignment="Left" Margin="440,122,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rdb_chamonix" Content="Chamonix" HorizontalAlignment="Left" Margin="613,122,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_salle" HorizontalAlignment="Left" Margin="165,186,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_salle" Content="Salle :" HorizontalAlignment="Left" Margin="119,182,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_theme_actuelle" Content="Thème :" HorizontalAlignment="Left" Margin="101,226,0,0" VerticalAlignment="Top" Width="57"/>
        <Label x:Name="lbl_obs" Content="Obstacles" HorizontalAlignment="Left" Margin="191,276,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="list_obs" HorizontalAlignment="Left" Height="100" Margin="147,304,0,0" VerticalAlignment="Top" Width="161"/>
        <Rectangle x:Name="rtc_modif" Fill="#FFE0E0EA" HorizontalAlignment="Left" Height="269" Margin="378,159,0,0" Stroke="Black" VerticalAlignment="Top" Width="381"/>
        <Label x:Name="lbl_choix_theme" Content="Choix du thème :" HorizontalAlignment="Left" Margin="403,208,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_modif" Content="Modification" HorizontalAlignment="Left" Margin="512,157,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <ComboBox x:Name="cmb_choix_theme" HorizontalAlignment="Left" Margin="523,212,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_choix_theme" HorizontalAlignment="Left" Height="23" Margin="523,234,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_ajoutmanuel_theme" Content="Ajout manuel" HorizontalAlignment="Left" Margin="434,230,0,0" VerticalAlignment="Top" FontSize="10" Foreground="#FFAA9292"/>
        <TextBox x:Name="txtb_choix_obs" HorizontalAlignment="Left" Height="23" Margin="523,376,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="list_choix_obs" HorizontalAlignment="Left" Height="100" Margin="523,276,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_choix_obs" Content="Choix des obstacles :" HorizontalAlignment="Left" Margin="383,276,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_ajout_obs" Content="Ajout manuel" HorizontalAlignment="Left" Margin="434,376,0,0" VerticalAlignment="Top" Foreground="#FFAA9292" FontSize="10"/>
        <Button x:Name="btn_ajouter" Content="Ajouter" HorizontalAlignment="Left" Margin="668,276,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btn_supprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="668,307,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox HorizontalAlignment="Left" Margin="165,230,0,0" VerticalAlignment="Top" Width="120"/>
